.tab
  &-head, &-content
    display none

    &.active
      display block

  &-head
    width 100%
    box-sizing border-box
    user-select none

  &-title
    box-sizing border-box
    padding 0 16px
    height 46px
    line-height 46px
    cursor pointer

  &-body
    height 100%

  &-content
    height 100%
    overflow-y auto
