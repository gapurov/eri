.auth
  &-container
    width 100%
    max-width 512px
    align(center)

  &-header
    text-align center

  &-restore-link
    text-align center
    margin 8px 0

    a
      color eriFontColor
      text-decoration none

  &-form
    &-container
      box-sizing border-box
      width 260px
      margin 0 auto

    &-space
      display block
      width 100%
      box-sizing border-box
      padding 8px 16px
      margin 8px 0
      border solid eriFontColor 1px
      &::placeholder
        color eriFontColor
