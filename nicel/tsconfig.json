{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": ".eri",
    "lib": [
      "ESNext"
    ],
    "paths": {
      "*": [
        "*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
