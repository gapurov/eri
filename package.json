  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "Nick K. <io@octetstream.me>",
  "scripts": {
    "dev": "remix vite:dev",
    "dev.open": "remix vite:dev --open",
    "build": "remix vite:build",
    "preview": "node --env-file .env.development.local ./node_modules/@remix-run/serve/dist/cli.js ./build/server/index.js",
    "start": "remix-serve ./build/server/index.js",
    "lint": "next lint",
    "lint:types": "tsc --noEmit",
    "test:compose-up": "docker compose -f docker-compose.test.yml up --wait",
    "test:compose-down": "docker compose -f docker-compose.test.yml down",
    "test": "pnpm test:compose-up && (vitest run ; pnpm test:compose-down)",
    "coverage": "pnpm test:compose-up && (c8 vitest run ; pnpm test:compose-down)",
    "report:html": "pnpm test:compose-up && ((c8 vitest run && c8 report --reporter=html) ; pnpm test:compose-down)",
    "ci": "pnpm test:compose-up && ((c8 vitest run && c8 report --reporter=json) ; pnpm test:compose-down)",
    "preinstall": "npx only-allow pnpm",
    "prepare": "npx is-in-ci || husky install"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./app/server/lib/db/cli.ts"
    ]
  },
  "pnpm": {
    "updateConfig": {
      "ignoreDependencies": [
        "react-dnd",
        "react-dnd-html5-backend",
        "react-query"
